<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>DemoProjectServlet</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>welldevdemocontroller.io.Signup</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>welldevdemocontroller.io.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>Filter</filter-name>
    <filter-class>util.SessionFilter</filter-class>
</filter>

<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/Products</url-pattern>
</filter-mapping>
<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/addproduct</url-pattern>
</filter-mapping>
<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/addproduct.jsp</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/updatepass</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/updatepass.jsp</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/editproduct</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/editproduct.jsp</url-pattern>
</filter-mapping>

  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>welldevdemocontroller.io.Products</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/Products</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>addproduct</servlet-name>
    <servlet-class>welldevdemocontroller.io.AddProduct</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addproduct</servlet-name>
    <url-pattern>/addproduct</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>editproduct</servlet-name>
    <servlet-class>welldevdemocontroller.io.EditProduct</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>editproduct</servlet-name>
    <url-pattern>/editproduct</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updatepass</servlet-name>
    <servlet-class>welldevdemocontroller.io.UpdatePass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updatepass</servlet-name>
    <url-pattern>/updatepass</url-pattern>
  </servlet-mapping>
  
  
</web-app>